@{
    ViewData["Title"] = "Lista de Funcionários";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/GerenciarUsuarios.css">
    <link rel="stylesheet" href="~/css/EditingWBS.css">
</head>

<body>
    <div class="container-conteudo">

        <h2 class="work-sans">Employee's List</h2>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">E-mail</th>
                    <th scope="col">Department</th>
                    <th scope="col">Type</th>
                    <th scope="col">Edit </th>
                    <th scope="col">Active</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td>Annie Santana</td>
                    <td>annie@gmail.com</td>
                    <td>Dev</td>
                    <td>Usuário</td>
                    <td>
                        <a href="#" class="editEmployeeLink"><img role="button" class="mini-icons" src="~/images/pencil.svg" /></a>
                    </td>
                    <td>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked1" checked>
                            <label class="form-check-label" for="flexSwitchCheckChecked1"></label>
                        </div>
                    </td>
                </tr>
                <tr>
                    <th scope="row">2</th>
                    <td>Bianca Uno</td>
                    <td>Bianca@gmail.com</td>
                    <td>dev</td>
                    <td>Usuário</td>
                    <td>
                        <a href="#" class="editEmployeeLink"><img role="button" class="mini-icons" src="~/images/pencil.svg" /></a>
                    </td>
                    <td>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked2" checked>
                            <label class="form-check-label" for="flexSwitchCheckChecked2"></label>
                        </div>
                    </td>
                </tr>
                <tr>
                    <th scope="row">3</th>
                    <td>Fulano</td>
                    <td>Fulano@gmail.com</td>
                    <td>RH</td>
                    <td>Admin</td>
                    <td>
                        <a href="#" class="editEmployeeLink"><img role="button" class="mini-icons" src="~/images/pencil.svg" /></a>
                    </td>
                    <td>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked3" checked>
                            <label class="form-check-label" for="flexSwitchCheckChecked3"></label>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>

    </div>
    <div class="btn-position">
        <button>Add Employee</button>
    </div>

    <!-- Modal de edição do Employee -->
    <div class="modal fade" id="editEmployeeModal" tabindex="-1" aria-labelledby="editEmployeeModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="work-sans-modal" id="editEmployeeModalLabel">Editing Employee</h2>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Seu formulário de edição de funcionário aqui -->
                    <div class="container form-container">

                        <div class="form-row">
                            <div class="form-column">
                                <label for="employeeName">Name:</label>
                                <input type="text" id="employeeName" class="form-control" placeholder="Enter name">
                            </div>
                            <div class="form-column">
                                <label for="employeeBirthdate">Birthdate:</label>
                                <input type="date" id="employeeBirthdate" class="form-control">
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-column">
                                <label for="employeeEmail">Email:</label>
                                <input type="email" id="employeeEmail" class="form-control" placeholder="Enter email">
                            </div>
                            <div class="form-column">
                                <label for="employeePassword">Password:</label>
                                <input type="password" id="employeePassword" class="form-control" placeholder="Enter password">
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-column">
                                <label for="employeeDepartment">Department:</label>
                                <select id="employeeDepartment" class="form-control">
                                    <option value="dev">Development</option>
                                    <option value="hr">Human Resources</option>
                                    <option value="sales">Sales</option>
                                </select>
                            </div>
                            <div class="form-column">
                                <label for="employeeType">Type:</label>
                                <select id="employeeType" class="form-control">
                                    <option value="user">User</option>
                                    <option value="admin">Administrator</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-secondary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Adiciona um manipulador de evento de clique aos ícones de lápis
        document.querySelectorAll('.editEmployeeLink').forEach(item => {
            item.addEventListener('click', function (event) {
                // Impedir o comportamento padrão do link
                event.preventDefault();

                // Obter o modal de edição do Employee pelo ID
                var modal = document.getElementById('editEmployeeModal');

                // Abrir o modal
                var modalInstance = new bootstrap.Modal(modal);
                modalInstance.show();
            });
        });
    </script>

</body>

</html>
