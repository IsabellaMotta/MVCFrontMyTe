@{
	ViewData["Title"] = "Location List";

}


<meta name="viewport" content="width-device-width, initial-scale=1.0" />
<link rel="stylesheet" href="~/css/GerenciarUsuarios.css">

<div class="container-conteudo">

	<h2 class="work-sans">Location List</h2>

	<table class="table">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Location name</th>
				<th scope="col">Code</th>
				<th scope="col">Edit</th>
				<th scope="col">Active</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<th scope="row">1</th>
				<td>São Paulo</td>
				<td>SP</td>

				<td>
					<a> <img role="button" class="mini-icons" src="~/images/pencil.svg" /> </a>
				</td>
				<td>
					<div class="form-check form-switch">
						<input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked>
						<label class="form-check-label" for="flexSwitchCheckChecked"></label>
					</div>
				</td>
			</tr>
			<tr>
				<th scope="row">2</th>
				<td>Recife</td>
				<td>RE</td>

				<td>
					<a> <img role="button" class="mini-icons" src="~/images/pencil.svg" /> </a>
				</td>
				<td>
					<div class="form-check form-switch">
						<input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked>
						<label class="form-check-label" for="flexSwitchCheckChecked"></label>
					</div>
				</td>
			</tr>
			<tr>
				<th scope="row">3</th>
				<td>Porto Aletre</td>
				<td>PA</td>

				<td>
					<img role="button" class="mini-icons" src="~/images/pencil.svg" />
				</td>
				<td>

					<div class="form-check form-switch">
						<input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked>
						<label class="form-check-label" for="flexSwitchCheckChecked"></label>
					</div>
				</td>
			</tr>
		</tbody>
	</table>

</div>
<div class="d-grid gap-2 d-md-flex justify-content-md-start">
	<button>
		Add New Location
	</button>
</div>