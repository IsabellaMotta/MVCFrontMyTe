@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="~/css/login.css">
</head>
<body>
    <div class="container">
        <div class="left">
            <img src="~/images/login-image.png" alt="Login Image" />
        </div>
        <div class="right">
            <div class="container-login-logo">
                <img class="logo-img" src="~/images/logo.png" alt="logotipo Avanade" />
                <h2>Login </h2>
            </div>
            <form>
                
                <input type="text" placeholder="Usuário"><br>
                <input type="password" placeholder="Senha"><br>
                <button type="submit">Entrar</button>
            </form>
        </div>
    </div>
</body>

</html>

